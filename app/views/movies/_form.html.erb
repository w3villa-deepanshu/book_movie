<%= form_with(model: movie, html: { class: 'show-form' }) do |form| %>
 <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center mt-4 mb-4">Add Movie</h2>
        <div class="form-group mb-20">
          <%= form.label :name, class: 'd-block mb-3' %>
          <%= form.text_field :name, class: 'form-control field-forms mb-3' %>
        </div>

        <div class="form-group mb-20">
          <%= form.label :genre, class: ' d-block mb-3' %>
          <%= form.text_field :genre, class: 'form-control field-forms  mb-3' %>
        </div>

        <div class="form-group mb-20">
          <%= form.label :language, class: ' d-block mb-3' %>
          <%= form.text_field :language, class: 'form-control field-forms  mb-3' %>
        </div>

        <div class="form-group mb-20">
          <%= form.label :desc, class: ' d-block mb-3' %>
          <%= form.text_area :desc, class: 'form-control field-forms  mb-3' %>
        </div>

        <div class="form-group mb-20">
          <%= form.label :image, class: ' d-block mb-3' %>
          <%= form.file_field :image, class: 'form-control-file field-forms  mb-3' %>
        </div>

        <div class="form-group mb-20">
          <%= form.submit 'Submit', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
 </div>
<% end %>
